{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "strict": 0,
    "no-console": ["error", { allow: ["info", "warn", "error"] }],
    "quotes": [
      "warn",
      "single",
      { avoidEscape: true }
    ],
    "prettier/prettier": "error",
    "react/prop-types": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["prettier", "jsx-a11y"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
